{
    "name": "ts-fserver",
    "version": "1.0.0",
    "description": "TypeScript implementation of the FROST fserver coordinator",
    "main": "dist/index.js",
    "scripts": {
        "start": "ts-node src/index.ts",
        "build": "npm run build-wasm && tsc",
        "dev": "nodemon src/index.ts",
        "build-wasm": "cd ../wasm && wasm-pack build --target nodejs --out-dir pkg-node"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "ethers": "^6.10.0",
        "express": "^4.18.2",
        "uuid": "^9.0.1",
        "ws": "^8.16.0",
        "tokamak-frost-wasm": "file:../wasm/pkg-node"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/node": "^20.11.0",
        "@types/uuid": "^9.0.7",
        "@types/ws": "^8.5.10",
        "nodemon": "^3.0.3",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    }
}
